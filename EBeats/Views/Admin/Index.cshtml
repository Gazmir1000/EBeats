@model IEnumerable<EBeats.Models.ViewModels.UserViewModel>
<h3>Menaxhimi i përdoruesve</h3>

Totali i perdoruesve: @Model.Count()
<table class="table table-sm table-bordered">
    <tr><th>Emri</th><th>Mbiemri</th><th>Email</th><th>Datelindja</th><th>Roli</th><th>Veprime</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">Nuk ka llogari Përdoruesish</td></tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>

                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.Birthday.ToString("d")</td>
                <td>@user.Role</td>


                <td class="text-center d-flex gap-2">
                    

                    <a class="btn btn-sm btn-primary" asp-controller="Admin"
               asp-route-id="@user.Id" asp-action="Create">Shto Rol</a>
                    <a class="btn btn-sm btn-warning" asp-controller="Admin"
               asp-route-id="@user.Id" asp-action="ShowEdit">Modifiko</a>
                    <form method="post" asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Fshi
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-controller="Role" class="btn btn-primary" asp-action="Index">Menaxhimi i Roleve</a>