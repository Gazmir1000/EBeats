@model IEnumerable<EBeats.Models.Product>

@{
        ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="row p-2">
        @foreach (var item in Model)
        {
        <div class="card col-4" >
            <img src="https://www.pngall.com/wp-content/uploads/10/Beats-PNG-Images.png" class="img-fluid card-img-top" alt="" />
                        <h4>@item.Name</h4>
                        <div>
                                @Html.Raw(item.Description)
                        </div>
                        <p>
                                @item.Price.ToString("C2")
                        </p>
                        <p>
                                <a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">Add to cart</a>
                        </p>
                </div>
        }


   

</div>